*
    margin: 0;
    padding: 0;

html,
body
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

canvas
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

.container_planet
    display: flex; 
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    position: absolute;
    z-index 1000;
    top 0%;
    right 0%;
    height 100%
    width 10%
    cursor: pointer

.container_planet .planet img
    width: 50px;
    height: 50px;

.container_planet .saturne img
     width: 89px

.container_planet .planet:hover
    transform: scale(1.2);
    transition: linear 1s;
